<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>
<p><%= image_tag @user.image_url, size: "250x200" if @user.image? %></p>
<% if user_signed_in? %>
<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.words.each do |t| %>
  <%= t.user.name %>
  <%= t.phrase %>
<% end %>

<%= link_to "一覧に戻る", words_path %>